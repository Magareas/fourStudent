<div class = 'container container-form mr-35 ml-35' >
  <h2 class="form-header">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email , class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>

      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>

    <% if devise_mapping.rememberable? %>

        <%= f.label :remember_me , class: 'form-label'%>
        <%= f.check_box :remember_me %>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'round-btn', style: 'margin-bottom: 20px;'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
