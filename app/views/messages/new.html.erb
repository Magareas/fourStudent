<h1 class = "text">Contact Page</h1>

    <div id = 'contact'>
    <%= form_for @message, url: contact_create_path, remote: true do |f| %>
        <div class="col-md-6">
        <%= f.label :name %></br>
        <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>

        <%= f.label :email %></br>
        <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

        <%= f.label :body %></br>
        <%= f.text_area :body, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                        placeholder: "Send me a message"%></br>

        <%= f.submit 'Send Message', class: 'btn btn-primary' %>
    </div>
  <% end %>
  <div class="col-md-6" id="flash-message">
    <%= render 'shared/flash' %>
  </div>
    </div>
